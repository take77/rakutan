<div class="row form">
  <div class="col-lg-12">
    <%= form_for @affiliation do |f| %>
      <h2>あなたの所属を教えてください</h2>
      <p>あなたの所属に合わせた情報をご提供します</p>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :college, placeholder: "所属する大学名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :department, placeholder: "所属する学部名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :course, placeholder: "所属する学科名（ない場合は空欄のままで構いません）", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>